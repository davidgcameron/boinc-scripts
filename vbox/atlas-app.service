[Unit]
Description=ATLAS job
Requires=autofs.service vboxguest.service
Wants=httpd.service
After=network.target autofs.service vboxguest.service httpd.service

[Service]
User=atlas
Type=forking
ExecStart=/home/atlas/ATLASbootstrap.sh
PIDFile=/home/atlas/ATLASJobAgent.pid

[Install]
WantedBy=multi-user.target
